{
  "name": "cuke-tap",
  "version": "2.1.0",
  "description": "Gherkin tap producing test harness",
  "main": "index.js",
  "scripts": {
    "deps": "dependency-check . && dependency-check . --extra --no-dev",
    "deps:pkg": "ncu",
    "deps:update": "ncu -a",
    "test": "standard && npm run deps && NODE_ENV=test node test",
    "test:cov": "standard && npm run deps && NODE_ENV=test istanbul cover test/index.js"
  },
  "repository": "yoshuawuyts/cuke-tap",
  "keywords": [
    "gherkin",
    "tap",
    "tape",
    "cucumber"
  ],
  "license": "MIT",
  "dependencies": {
    "gherkin": "github:cucumber/gherkin-javascript",
    "pull-glob": "^1.0.6",
    "pull-stream": "^3.4.3",
    "tape": "^4.6.0"
  },
  "devDependencies": {
    "dependency-check": "^2.5.1",
    "istanbul": "^0.3.19",
    "npm-check-updates": "^2.2.0",
    "standard": "^5.3.1",
    "tape": "^4.2.0"
  },
  "files": [
    "LICENSE",
    "index.js",
    "test*",
    "README.md"
  ]
}
